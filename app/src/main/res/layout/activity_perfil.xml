<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    tools:context=".Usuario">

    <ImageView
        android:id="@+id/btn_perfil"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="354dp"
        android:src="@drawable/ic_account_circle_red_24dp" />

    <LinearLayout
        android:id="@+id/layout_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/texto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:background="@drawable/third_button"
            android:textColor="@color/colorBlanco"
            />

        <TextView
            android:id="@+id/texto_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/correo"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:background="@drawable/third_button"
            android:textColor="@color/colorBlanco"
            />

    </LinearLayout>

</RelativeLayout>
